# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cloudcruise

# S3/MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=har-files
S3_REGION=us-east-1

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_HAR_UPLOADS=har-uploads
KAFKA_CONSUMER_GROUP=har-processor

# Redis
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_CURL_GEN=20/minute

# LLM
OPENAI_API_KEY=your-openai-api-key-here
LLM_PRIMARY_MODEL=o3-mini-2025-01-31
LLM_FALLBACK_MODEL=gpt-4o-2024-08-06
LLM_MAX_CANDIDATES=10
LLM_TIMEOUT=10

# API
API_HOST=0.0.0.0
API_PORT=8000

# Request Execution
REQUEST_EXECUTION_TIMEOUT=30
MAX_RESPONSE_SIZE=10485760
ENABLE_REQUEST_EXECUTION=true
BLOCKED_DOMAINS=  # optional comma-separated list

# Observability
HELICONE_API_KEY=